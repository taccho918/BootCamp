%箇条書きの間隔設定
\makeatletter
\def\@listI{\leftmargin\leftmargini
           \partopsep=0pt \parsep=1.2ex \topsep=1.2ex \itemsep=0pt \relax}

\def\@listii{\leftmargin\leftmarginii \labelwidth\leftmarginii
             \advance\labelwidth-\labelsep
             \topsep=0pt \parsep=1.2ex \itemsep=0pt \relax}
\let\@listi\@listI \@listi
\makeatother

\makeatletter
\def\@maketitle{
  \begin{center}
    \let\footnote\thanks
        {\Large \@title \par}
        {\@subtitle \par}
  \end{center} %右詰めのため
  \begin{flushright}
  {\@date \par}
  {\@author \par}
  \end{flushright}
         \par}

\def\subtitle#1{\gdef\@subtitle{#1}}
\let\@subtitle\@empty
\makeatother


